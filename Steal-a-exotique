credit.TextColor3 = Color3.fromRGB(180,180,255)

local toggle = Instance.new("TextButton",frame)
toggle.Size = UDim2.new(0,28,0,28)
toggle.Position = UDim2.new(1,-35,0,6)
toggle.Text = "-"
toggle.Font = Enum.Font.GothamBold
